<Window x:Class="SpeechToTextTray.UI.Windows.RecordingOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recording"
        Height="100" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        LocationChanged="Window_LocationChanged">

    <Window.Resources>
        <!-- Pulsing animation for recording dot -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="RecordingDot"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.3" Duration="0:0:0.75"
                AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <!-- Main container with rounded corners and semi-transparent background -->
    <Border Background="#CC000000"
            CornerRadius="8"
            BorderBrush="#FF333333"
            BorderThickness="1"
            Padding="15,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pulsing red recording dot -->
            <Ellipse x:Name="RecordingDot"
                     Grid.Column="0"
                     Width="12" Height="12"
                     Fill="#FFFF0000"
                     VerticalAlignment="Center"
                     Margin="0,0,12,0"/>

            <!-- Text information -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- Recording status -->
                <TextBlock Text="RECORDING"
                           Foreground="#FFFF0000"
                           FontWeight="Bold"
                           FontSize="11"
                           FontFamily="Segoe UI"/>

                <!-- Device name -->
                <TextBlock x:Name="DeviceNameText"
                           Text="Microphone"
                           Foreground="White"
                           FontSize="11"
                           FontFamily="Segoe UI"
                           Margin="0,4,0,0"/>

                <!-- Provider name -->
                <TextBlock x:Name="ProviderNameText"
                           Text="Local - sherpa-onnx"
                           Foreground="#FFCCCCCC"
                           FontSize="9"
                           FontFamily="Segoe UI"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
